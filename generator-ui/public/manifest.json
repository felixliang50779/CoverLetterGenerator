{
    "manifest_version": 3,
    "name": "Cover Letter Generator",
    "version": "1.0.0",
    "description": "yum",
    "action": {
      "default_popup": "index.html"
    },
    "permissions": ["activeTab", "scripting", "tabs"],
    "host_permissions": ["*://*/*"],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "commands": {
      "get-selected-text": {
        "suggested-key": {
          "default": "Alt+Z"
        },
        "description": "Get selected text from the currently active tab"
      }
    }
}