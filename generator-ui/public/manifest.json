{
    "manifest_version": 3,
    "name": "Cover Letter Generator",
    "version": "1.0.0",
    "action": {
      "default_popup": "index.html"
    },
    "permissions": ["activeTab", "scripting", "notifications"],
    "host_permissions": ["file://*/*", "http://localhost:8080/*"],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "commands": {
      "get-selected-text": {
        "suggested-key": {
          "default": "Alt+W"
        },
        "description": "Set current template target to selected text from the active tab"
      },
      "toggle-previous-select": {
        "suggested-key": {
          "default": "Alt+Q"
        },
        "description": "Switch to the previous template target"
      },
      "toggle-next-select": {
        "suggested-key": {
          "default": "Alt+E"
        },
        "description": "Switch to the next template target"
      }
    }
}