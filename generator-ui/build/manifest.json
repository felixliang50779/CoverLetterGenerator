{
  "manifest_version": 3,
  "name": "Cover Letter Generator",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "version": "1.0.1",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "notifications",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "assets/main.jsx-loader-CCI2HdC5.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "type": "module",
      "css": [
        "assets/FloatInput-BbGhJUn8.css"
      ]
    }
  ],
  "commands": {
    "get-selected-text": {
      "suggested-key": {
        "default": "Alt+W"
      },
      "description": "Assign from the selected text"
    },
    "toggle-previous-select": {
      "suggested-key": {
        "default": "Alt+Q"
      },
      "description": "Switch to the previous target"
    },
    "toggle-next-select": {
      "suggested-key": {
        "default": "Alt+E"
      },
      "description": "Switch to the next target"
    }
  },
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "assets/FloatInput-BnyRXgaX.js",
        "assets/main.jsx-BgQl2n0q.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
